<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_selected_photo_IvImg"
        android:layout_width="@dimen/w_50"
        android:layout_height="@dimen/h_50"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/empty_ic_no_data" />

    <ImageView
        android:id="@+id/item_selected_photo_IvDel"
        android:layout_width="@dimen/w_15"
        android:layout_height="@dimen/h_15"
        android:layout_gravity="right"
        android:src="@mipmap/ic_select_photo_del_mdd" />

</FrameLayout>